{
    "compilerOptions": {
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        // "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "moduleResolution": "Node",
        "baseUrl": ".",
        "paths": {
            "/@/*": ["src/*"],
            "/mock/*": ["mock/*"],
            "/server/*": ["server/*"]
        },
        "lib": ["esnext", "dom"],
        "types": ["vite/client", "jest", "node"],
        "esModuleInterop": true,
        "plugins": [
            { "name": "@vuedx/typescript-plugin-vue" }
        ]
    },
    "include": [
        "**/*.ts", "**/*.d.ts", "**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}